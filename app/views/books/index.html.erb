<p id="notice"><%= notice %></p>

<h1>List of Books</h1>
<br>

<table class="table table-success table-striped" >
  <thead>
    <tr class="table-primary" >
      <th style="text-align:center; background-color:black;color:white;font-size:20px">Title</th>
      <th style="text-align:center; background-color:black;color:white;font-size:20px">Price</th>
      <th colspan="3", style="text-align:center; background-color:black;color:white;font-size:20px">Action</th>
    </tr>
  </thead>
  <tbody id="booksTable" >
    <% @books.each do |book| %>
      <%= render 'book_row', book: book %>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Book', new_book_path, class:"btn btn-dark", data: { remote: true } %>

<div class="modal fade" id="showUserModal" tabindex="-1" aria-labelledby="showUserModalLabel" aria-hidden="true">
</div>
